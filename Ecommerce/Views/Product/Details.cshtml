@model Ecommerce.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Product Details</h1>

<div class="mb-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
    <a asp-action="AllProduct" class="btn btn-primary">Back to List</a>
</div>

<hr />

<dl class="row">
    @if (!string.IsNullOrEmpty(Model.ImageFileName))
    {
        <dt class="col-sm-2">
            <img src="~/images/@Model.ImageFileName" alt="@Model.Name" class="img-thumbnail" style="max-width:300px;" />
        </dt>
        <dd class="col-sm-10"></dd>
    }

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Price)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Price)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Description)
    </dd>
</dl>

<hr />
<form asp-action="Delete" asp-route-id="@Model?.Id" method="post" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
